<div class="splash-container">

  <div class="card ">

    <div class="card-header text-center">
      <%= content_tag :h1, 'Rastreo DDTech', class: 'navbar-brand' %>
    </div>

    <div class="card-body">
      <%= form_for :track, url: '', method: :get do |f| %>
      <div class="form-group">
        <i class="fas fa-key"></i>
        <%= f.label :id, Order.human_attribute_name(:ddtech_key) %>
        <%= f.text_field :id, class: 'form-control form-control-lg',
              placeholder: Order.human_attribute_name(:ddtech_key), required: true %>
      </div>

      <%= f.submit t('labels.search'), class: 'btn btn-primary btn-lg btn-block' %>
      <% end %>
    </div>

  </div>

</div>
