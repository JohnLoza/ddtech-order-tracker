<%= form_for new_note, url: admin_order_notes_path(new_note.order_id), remote: true do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= text_area :note, :message, class: 'form-control',
    'data-submit-on-enter' => true, 'data-target' => '#new_note_submit' %>
  <%= f.submit t('labels.save'), id: 'new_note_submit',
    class: 'btn btn-primary d-none', data: {confirm: t('.are_you_sure_to_save')} %>
  <hr>
<% end if can? :create, new_note %>
