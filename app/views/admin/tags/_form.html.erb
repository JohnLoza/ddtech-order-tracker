<div class="card">
  <h2 class="card-header"><%= yield :page_header %></h2>
  <div class="card-body">
    <%= form_for [:admin, @tag] do |f| %>
    <%= render partial: '/shared/form_errors.html.erb', locals: {obj: @tag} %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control',
          maxlength: 25, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :css_class %>
      <%= f.hidden_field :css_class %>

      <div>
        <% Tag::STYLES.each do |tag_style| %>
          <% tag_style += ' active' if tag_style == @tag.css_class %>
          <%= content_tag :span, 'sample tag', class: tag_style, 'data-tag-style' => 'true' %>
        <% end %>
      </div>
    </div>

    <%= f.submit t('labels.save'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

