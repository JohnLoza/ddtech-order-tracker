<% provide :title, t('.title') %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">
          <%= t(".title") %>
          <%= link_to new_admin_tag_path do %>
          <i class="fas fa-fw fa-plus-circle fa-lg float-right"></i>
          <% end if can? :create, Tag %>
        </h2>
      </div>
      <div class="card-body">
        <div class="table-responsive">

          <table class="table table-bordered table-hover">
            <thead class="bg-light">
              <tr>
                <%= content_tag :td, pagy_bootstrap_nav(@pagy).html_safe, colspan: 5 %>
              </tr>
              <tr class="border-0">
                <%= content_tag :th, Tag.human_attribute_name(:name), class: 'border-0' %>
                <%= content_tag :th, Tag.human_attribute_name(:css_class), class: 'border-0' %>
                <%= content_tag :th, t('labels.actions'), class: 'border-0' %>
              </tr>
            </thead>
            <tbody>
              <%= render @tags %>
            </tbody>
            <tfoot>
              <tr>
                <%= content_tag :td, pagy_bootstrap_nav(@pagy).html_safe, colspan: 5 %>
              </tr>
            </tfoot>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>

