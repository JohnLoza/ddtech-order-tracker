<%= provide :title, t('.title') %>

<div class="card">
  <div class="card-header">
    <%= content_tag :h1, yield(:title), class: 'card-title' %>
  </div>
  <div class="card-body">
    <%= form_for [:admin, @origin_state] do |f| %>
      <div class="form-group">
        <%= f.label :estimated_shipment_days %>
        <%= f.text_field :estimated_shipment_days, autofocus: true,
          class: 'form-control', step: 1, min: 1, max: 99 %>
      </div>

      <%= f.submit t('labels.save'), class: 'btn btn-primary btn-lg' %>
    <% end %>
  </div>
</div>

