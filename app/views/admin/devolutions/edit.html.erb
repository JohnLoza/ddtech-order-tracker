<% provide :title, t('.title', devolution: @devolution) %>

<div class="card">
  <h2 class="card-header"><%= yield :page_header %></h2>
  <div class="card-body">
    <%= form_for [:admin, @devolution] do |f| %>
    <%= render partial: '/shared/form_errors.html.erb', locals: {obj: @devolution} %>

    <div class="form-group">
      <%= f.label :client_name %>
      <%= f.text_field :client_name, class: 'form-control',
          maxlength: 50, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control',
          maxlength: 50, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :telephone %>
      <%= f.telephone_field :telephone, class: 'form-control',
          maxlength: 50, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :client_type %>
      <%= f.text_field :client_type, class: 'form-control',
          maxlength: 50, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :products %>
      <%= f.text_area :products, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :devolution_address %>
      <%= f.text_area :devolution_address, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :comments %>
      <%= f.text_area :comments, class: 'form-control', required: true %>
    </div>

    <%= f.submit t('labels.save'), class: 'btn btn-primary btn-lg' %>
    <% end %>
  </div>
</div>
