<% provide :title, Supplier.model_name.human(count: 2) %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">
          <%= yield :title %>
          <%= link_to new_admin_supplier_path do %>
          <i class="fas fa-fw fa-plus-circle fa-lg float-right text-secondary"></i>
          <% end if can? :create, Supplier %>
        </h2>
      </div>
      <div class="card-body">
        <div class="d-flex flex-wrap flex-md-row flex-column mb-4">
          <%= render @suppliers %>
        </div>
        <%= content_tag :td, pagy_bootstrap_nav(@pagy).html_safe, colspan: 5 %>
      </div>
    </div>
  </div>
</div>
