<div class="card">
  <div class="card-header">
    <%= content_tag :h1, yield(:title), class: 'card-title' %>
  </div>
  <div class="card-body">
    <%= form_for [:admin, @supplier] do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', maxlength: 50, autofocus: true %>
      </div>

      <%= f.submit t('labels.save'), class: 'btn btn-primary btn-lg' %>
    <% end %>
  </div>
</div>
