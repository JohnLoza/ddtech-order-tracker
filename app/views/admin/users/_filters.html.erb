<div class="row">
  <div class="col-md-12">
    <div class="card">
      <%= content_tag :h3, t('labels.filters'), class: 'card-header' %>
      <div class="card-body">
        <%= form_for :filter, method: :get, html: {class: 'form-inline mb-3'} do |f| %>
          <div class="form-group mx-sm-3">
            <%= f.label :keywords, 'Nombre / Email', class: 'sr-only'  %>
            <%= f.text_field :keywords, value: filter_params(require: :keywords),
              class: 'form-control filter mt-3', placeholder: 'Nombre / Email' %>
          </div>

          <div class='form-group mx-sm-3'>
            <%= f.label :role, User.human_attribute_name(:role), class: 'sr-only'  %>
            <%= f.select :role, roles_for_select(),
                { prompt: User.human_attribute_name(:role), selected: filter_params(require: :role) },
                { class: 'form-control mt-3' } %>
          </div>

          <%= f.submit t('labels.filter'), class: 'btn btn-primary mt-3' %>
          <%= link_to t('labels.clear_filters'), admin_users_path, class: 'btn btn-light mt-3 ml-3' %>
        <% end %>

        <span class="font-italic">* El campo de b√∫squeda solamente filtra por Nombre o Email.</span>
      </div>
    </div>
  </div>
</div>
