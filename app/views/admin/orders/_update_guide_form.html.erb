<%= form_for [:admin, order], html: {class: 'text-center'} do |f| %>
  <%= f.hidden_field :status, value: Order::STATUS[:sent] %>
  <%= f.label :guide %>
  <%= f.text_field :guide, class: 'form-control', required: true %>
  <%= f.submit t('labels.save'), class: 'btn btn-primary m-2',
    data: {confirm: t('labels.are_you_sure_to_proceed')} %>
<% end if can? :update_guide, order %>
