<div class="card">
  <h5 class="card-header"><%= yield :page_header %></h5>
  <div class="card-body">
    <%= form_for [:admin, @order] do |f| %>
    <%= render partial: '/shared/form_errors.html.erb', locals: {obj: @order} %>

    <div class="form-group">
      <%= f.label :ddtech_key %>
      <%= f.text_field :ddtech_key, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :client_email %>
      <%= f.email_field :client_email, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :parcel %>
      <%= f.select :parcel, parcels_for_select(),
          {prompt: t('labels.select')}, {class: 'form-control', required: true} %>
    </div>

    <div class="form-group">
      <%= f.label :assemble %>
      <%= f.check_box :assemble %>
    </div>

    <%= f.submit t('labels.save'), class: 'btn btn-primary btn-lg' %>
    <% end %>
  </div>
</div>
