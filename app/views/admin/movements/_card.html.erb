<div class="card">
  <div class="card-header pointer" onclick="toggleChevron(this)"
    data-toggle="collapse" data-target=".movements-card">
    <h2 class="card-title">
      <%= Movement.model_name.human(count: 2) %>
      <i class="fas fa-chevron-up"></i>
    </h2>
  </div>
  <div class="card-body collapse show movements-card">
    <%= render movements %>
  </div>
</div>
